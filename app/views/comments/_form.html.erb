<%= form_for [@course, @comment] do |f| %>
 
  <p>
    <%= f.label :course_id %><br>
    <%= f.text_field :course_id, :value=>@course.id, :readonly=>true %>
  </p>
   <p>
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id, :value=>current_user.id, :readonly=>true%>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
 
  <p>
    <%= f.label :created_at %><br>
    <%= f.text_field :created_at, :value => @comment.created_at, :readonly=>true%>
  </p> 

  <p>
    <%= f.label :updated_at %><br>
    <%= f.text_field :updated_at, :value => @comment.updated_at, :readonly=>true %>
  </p> 
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>