<section class="masthead">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-4 prefix-md-2 suffix-md-2 prefix-lg-4 suffix-lg-4">
        <h1 class="text-center">Login</h1>
        <br>
        <div class="login-form">
        <%= link_to "Login with Facebook", user_facebook_omniauth_authorize_path, :class => 'btn btn--fill btn--facebook' %>
        <span class="text-divider">OR</span>
        <%= form_for(:user, :url => session_path(:user)) do |f| %>
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true %>
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off" %>
            <%= link_to "Forgot your password?", new_password_path(:user), :class => 'login-form__link' %>
          <%= f.submit "Login", :class => ['btn','btn--fill', 'btn--primary'] %>
        <% end %>
      </div>
    </div>
  </div>
</section>